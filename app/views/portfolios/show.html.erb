<h1><%= @portfolio_item.title %></h1>
<h3><%= @portfolio_item.subtitle %></h3>
<p><%= @portfolio_item.body %></p>
<% if @portfolio_item.technologies.any? %>
	<% @portfolio_item.technologies.each do |t| %>
		<ul>
			<li><%= t.name %></li>
		</ul>
	<% end %>
<% end %>

<%= image_tag @portfolio_item.thumb_image if !@portfolio_item.thumb_image.nil?%>
<%= link_to 'edit', edit_portfolio_url %>
<%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: {confirm: 'Are u sure'} %>
<%= link_to 'Back', angular_items_path %>